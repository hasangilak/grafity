{
  "name": "grafity",
  "version": "2.0.0",
  "description": "Nx plugin for deep React and TypeScript analysis with AI integration - transformed from standalone tool to Nx ecosystem",
  "private": true,
  "scripts": {
    "build": "nx build @grafity/nx-react",
    "test": "nx test @grafity/nx-react",
    "lint": "nx lint @grafity/nx-react",
    "demo:analyze": "nx analyze-react sample-react-app",
    "demo:visualize": "nx visualize-components sample-react-app --outputPath=dist/demo-viz",
    "demo:patterns": "nx detect-patterns sample-react-app --outputPath=dist/demo-patterns.md",
    "graph:build": "npx ts-node tests/test-phase3-visualization.ts",
    "graph:visualize": "npx ts-node tests/test-phase3-visualization.ts",
    "graph:demo": "npm run graph:visualize",
    "neo4j:start": "./scripts/neo4j.sh start",
    "neo4j:stop": "./scripts/neo4j.sh stop",
    "neo4j:status": "./scripts/neo4j.sh status",
    "neo4j:shell": "./scripts/neo4j.sh shell",
    "neo4j:import": "./scripts/neo4j.sh import",
    "neo4j:clear": "./scripts/neo4j.sh clear",
    "neo4j:test": "npx ts-node src/core/graph-engine/test-neo4j.ts"
  },
  "keywords": [
    "code-visualization",
    "ast-parsing",
    "graph-generation",
    "typescript",
    "react",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@nx/devkit": "21.5.3",
    "@types/node": "20.19.9",
    "@typescript-eslint/parser": "^7.16.0",
    "@typescript-eslint/typescript-estree": "^6.15.0",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "fast-glob": "^3.3.2",
    "glob": "^10.3.10",
    "neo4j-driver": "^5.28.2",
    "typescript": "~5.9.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@nx/eslint": "21.5.3",
    "@nx/eslint-plugin": "21.5.3",
    "@nx/jest": "21.5.3",
    "@nx/js": "21.5.3",
    "@nx/plugin": "^21.5.3",
    "@nx/workspace": "^21.5.3",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "^0.7.8",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "^10.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-util": "^29.7.0",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "21.5.3",
    "prettier": "^2.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "10.9.1",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.3.0"
  },
  "nx": {}
}

{
  "name": "grafity",
  "version": "1.0.0",
  "description": "Code visualization and graph generation platform for TypeScript/React/Node.js projects",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/server/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build"
  },
  "keywords": [
    "code-visualization",
    "ast-parsing",
    "graph-generation",
    "typescript",
    "react",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "ws": "^8.14.2",
    "chokidar": "^3.5.3",
    "glob": "^10.3.10",
    "fast-glob": "^3.3.2",
    "@typescript-eslint/parser": "^6.15.0",
    "@typescript-eslint/typescript-estree": "^6.15.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/ws": "^8.5.10",
    "@types/jest": "^29.5.8",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0"
  }
}